# Maria AI Agent Frontend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL - CRITICAL: Must match your backend deployment
# Development (local backend)
# REACT_APP_API_BASE_URL=http://localhost:5000

# Staging (Fly.io staging deployment)
# REACT_APP_API_BASE_URL=https://maria-ai-agent-staging.fly.dev

# Production (Fly.io production deployment)
# REACT_APP_API_BASE_URL=https://maria-ai-agent.fly.dev

# =============================================================================
# SUPABASE CONFIGURATION (for future features)
# =============================================================================

# Supabase public configuration (safe to expose in frontend)
# REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co
# REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# ANALYTICS & MONITORING (for user journey tracking)
# =============================================================================

# Google Analytics (optional)
# REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog (recommended for user journey tracking)
# REACT_APP_POSTHOG_KEY=your-posthog-key
# REACT_APP_POSTHOG_HOST=https://app.posthog.com

# Sentry (for error tracking)
# REACT_APP_SENTRY_DSN=your-sentry-dsn

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Port for local development (optional, can set in package.json)
PORT=3000

# Enable source maps in production (set to false for security)
GENERATE_SOURCEMAP=false

# =============================================================================
# VERCEL-SPECIFIC SETTINGS
# =============================================================================

# These are set automatically by Vercel, but can be overridden
# VERCEL_URL  # Automatically set by Vercel
# VERCEL_ENV  # Automatically set by Vercel (development, preview, production) 